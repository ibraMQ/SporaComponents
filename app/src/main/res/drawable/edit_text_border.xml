<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/back"/>
            <stroke android:width="2dp" android:color="@color/btnDark"/>
        </shape>
    </item>
    <!-- Visible only the bottom border -->
    <item
        android:left="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/back"/>
        </shape>
    </item>

</layer-list>